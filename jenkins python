pipeline {
    agent any
    environment {
        PYTHON = tool name: 'python3'
    }
    stages {
        stage('Clone Repository') {
            steps {
                git branch: 'main', credentialsId: 'github', url: 'https://github.com/dev-ajay-git/python-project.git'
            }
        }
        stage('Install Dependencies') {
            steps {
                sh '${PYTHON}/usr/bin/python3 -m pip install -r requirements.txt'
            }
        }
        stage('Run Tests') {
            steps {
                sh '${PYTHON}/usr/bin/python3 -m pytest tests/'
            }
        }
    }
}
